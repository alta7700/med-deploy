server {
    listen 80;
    listen [::]:80;
    server_name $SUP_DOMAIN;

    server_tokens off;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name $SUP_DOMAIN;

    ssl_certificate /etc/nginx/ssl/live/$SUP_DOMAIN/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/$SUP_DOMAIN/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_dhparam /etc/nginx/dhparam.d/sup.pem;

    location / {
        proxy_pass         http://host.docker.internal:$SUP_PORT;
        proxy_http_version 1.1;
        proxy_set_header   Host $host;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   X-Real-IP $remote_addr;
    }
}
